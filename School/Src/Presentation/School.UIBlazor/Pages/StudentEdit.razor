@page "/studentedit"
@page "/studentedit/{StudentId}"

<h1>Detail for @Student.Name</h1>
<EditForm Model="@Student" >


    <DataAnnotationsValidator />
    <ValidationSummary></ValidationSummary>

    <div class="form-group row">
        <label for="Name" class="col-sm-3">Name: </label>
        <InputText id="idName" class="form-control col-sm-8"
                   @bind-Value="@Student.Name" placeholder="Enter your name"></InputText>
        <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => Student.Name)" />
    </div>

    <div class="form-group row">
        <label for="birthdate" class="col-sm-3">Birth Date: </label>
        <InputDate id="idDateOfBirth" class="form-control col-sm-8"
                   @bind-Value="@Student.DateOfBirth" placeholder="Enter birth date"></InputDate>
    </div>

    <div class="form-group row">
        <label for="country" class="col-sm-3">Country: </label>
        <InputSelect id="idCountry" class="form-control col-sm-8" @bind-Value="@Student.CountryId">
            @foreach (var country in CountryList)
            {
                <option value="@country.Id">@country.Name</option>
            }
        </InputSelect>
    </div>

</EditForm>